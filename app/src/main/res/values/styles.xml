<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Base components layout width && height-->
    <style name="fab_layout_match_width_wrap_height_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="fab_layout_wrap_width_wrap_height_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="fab_layout_match_width_match_height_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--Action Button-->
    <style name="fab_action_button_base_style" parent="fab_layout_wrap_width_wrap_height_style" />
    <style name="fab_action_button_style" parent="fab_action_button_base_style">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>

    </style>
</resources>
